<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaoxi.mapper.MonkMapper">
    <insert id="addMonk" parameterType="com.gaoxi.entity.Monk">
        INSERT INTO `monk`
        (`id`, `nickname`, `skill`, `grade`, `salary`, `birthday`, `entry`)
        VALUES(#{id}, #{nickname}, #{skill}, #{grade}, #{salary}, #{birthday}, #{entry});
    </insert>
    <delete id="delMonk" parameterType="java.lang.Integer">
        DELETE FROM `monk` WHERE id = #{id}
    </delete>
    <update id="updateMonk" parameterType="Monk">
        UPDATE `monk`
           SET `nickname` = #{nickname}
         WHERE `id` = #{id}
    </update>
    <select id="getMonkById" parameterType="java.lang.Integer">
        SELECT * FROM `monk` WHERE `id` = #{id}
    </select>
    <!-- 即使返回的类型是List<type>，resultType也是写type就行 -->
    <select id="findAllMonk" resultType="Monk">
        SELECT * FROM `monk`
    </select>
</mapper>